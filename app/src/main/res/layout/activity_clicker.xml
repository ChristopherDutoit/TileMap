<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout"
    tools:context=".ClickerActivity">

    <Button
        android:id="@+id/bout"
        android:layout_width="162dp"
        android:layout_height="99dp"
        android:text="Clicker"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/barre_hp_clicker"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/barre_hp_clicker"
        android:layout_width="95dp"
        android:layout_height="607dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barre_clicker" />

    <ImageView
        android:id="@+id/dark_arrow_clicker"
        android:layout_width="42dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toBottomOf="@+id/barre_hp_clicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barre_hp_clicker"
        app:layout_constraintVertical_bias="0.85"
        app:srcCompat="@drawable/fleche_noire" />

    <TextView
        android:id="@+id/test1"
        android:layout_width="116dp"
        android:layout_height="68dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/bout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.667"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471" />

</androidx.constraintlayout.widget.ConstraintLayout>